{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "lib",
    "preserveConstEnums": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "dist",
    "types"
  ]
}
